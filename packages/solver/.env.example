# Solver Configuration
# Copy this file to .env and fill in your values

# ============================================
# DESTINATION CONFIGURATION
# ============================================

# Destination type: 'evm' or 'stacks' (default: evm)
DESTINATION_TYPE=evm

# ============================================
# EVM CONFIGURATION (when DESTINATION_TYPE=evm)
# ============================================

# Required for EVM fills: Solver private key
SOLVER_PRIVATE_KEY=your_solver_private_key_here

# ============================================
# STACKS CONFIGURATION (when DESTINATION_TYPE=stacks)
# ============================================

# Required for Stacks fills: Wallet mnemonic and password
WALLET_MNEMONIC_KEY="your 24-word mnemonic phrase here"
WALLET_PASSWORD="your_wallet_password"

# Required: Solver EVM address (for event logging on Stacks)
SOLVER_EVM_ADDRESS=0x8f486D1580A397610DaBD13De911c51D46455A9a

# Required: Stacks recipient address (where tokens are sent on Stacks)
# Note: This is a workaround for cross-chain address incompatibility
# The order's EVM recipient cannot be used on Stacks
STACKS_RECIPIENT_ADDRESS=STGGJS6C7SAHZ41ZJ8YKMTEHW1V75TJ6VR74AARE

# Optional: Stacks contract addresses (defaults shown)
STACKS_FILLGATE_ADDRESS=ST3P57DRBDE7ZRHEGEA3S64H0RFPSR8MV3PJGFSEX
STACKS_FILLGATE_NAME=fill-gate
STACKS_SBTC_ADDRESS=ST3P57DRBDE7ZRHEGEA3S64H0RFPSR8MV3PJGFSEX
STACKS_SBTC_NAME=mock-sbtc

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Optional: Database configuration
DATABASE_TYPE=memory